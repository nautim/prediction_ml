# here, I think NAs can be used as a reference category
data_filtered$gender <- fct_recode(data_filtered$gender, "zero" = "")
data_filtered <- data_filtered %>%
  mutate(gender = as.factor(gender),
         gender = relevel(gender, ref = "zero")) 

