  mutate(urban_m = as.factor(urban_m),
         urban_m = fct_recode(urban_m, "capital" = "1", "other big" = "2", "other" = "3"))

data_filtered %>%
  ggplot(aes(x = urban_m)) + geom_bar()

### region_m
